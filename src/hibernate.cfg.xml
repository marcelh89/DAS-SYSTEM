<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dassystem</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
		<property name="show_sql">true</property>
		<property name="connection.pool_size">1</property>

		<mapping class="de.fhb.dassystem.db.entity.User"></mapping>
		<mapping class="de.fhb.dassystem.db.entity.Gruppe"></mapping>
		<mapping class="de.fhb.dassystem.db.entity.Vorlesung"></mapping>
		<mapping class="de.fhb.dassystem.db.entity.VorlesungTeilnehmer"></mapping>
		<mapping class="de.fhb.dassystem.db.entity.VorlesungWochentag"></mapping>

	</session-factory>
</hibernate-configuration>  